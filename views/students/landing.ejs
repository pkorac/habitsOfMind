
<!doctype html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
	<title>Students profile</title>
	<link rel="stylesheet" href="../css/bootstrap.min.css" title="Bootstrap" type="text/css" media="screen" charset="utf-8">
	<link rel="stylesheet" href="../css/bootstrap-responsive.min.css" title="Bootstrap responsive" type="text/css" media="screen" charset="utf-8">

	
</head>
<body>
	
	<h1>Hello <%= username %></h1>

	<% if ( message ) { %>
		<%= message %>
	<% } %>
	<form method="post" action="/students/landing">
		<input type="hidden" name="id" value="<%= id %>" />
		<div>
			<label>Email</label>
			<input type="text" name="email" value="<%= email %>" />
		</div>
		<div>
			<label>Password</label>
			<input type="password" name="password" />
		</div>
		<div>
			<label>Gender</label>
			<select name="gender">
				<% for ( var i = 0; i < genders.length; i ++ ) { %>
					<% if ( gender === genders[i] ) { %>
						<option value="<%= genders[i] %>" selected><%= genders[i] %></option>
					<% } else { %>
						<option value="<%= genders[i] %>"><%= genders[i] %></option>
					<% } %>
				<% } %>
			</select>			
		</div>


		<input type="submit" value="Save changes" />
	</form>

</body>
</html>