<% layout('../boilerplate') %>




<div class="row">
	<div class="col-sm-6">
		<h2>List</h2>
	</div>
	<div class="col-sm-6 text-right">
		<a href="populate" class="btn btn-default create-button">Add students</a>
		<a href="create" class="btn btn-success create-button">Add a group</a>
	</div>
</div>

<table class="table table-codnensed">
	<thead>
		<tr>
			<th>Name</th>
			<th>Year</th>
			<th class="text-right">Teacher</th>
		</tr>
	</thead>
	<tbody>
		<% for ( var i = 0; i < groups.length; i ++ ){ %>
			<tr>
				<td><%= groups[i].name %></td>
				<td><%= groups[i].year %></td>
				<td class="text-right"><%= groups[i].teacher %></td>
			</tr>
		<% } %>	
		
	</tbody>

</table>