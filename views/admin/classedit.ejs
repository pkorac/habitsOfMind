<!doctype html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
	<title>Admin - Edit Class</title>
	<link rel="stylesheet" href="../../../css/bootstrap.min.css" title="Bootstrap" type="text/css" media="screen" charset="utf-8">
	<link rel="stylesheet" href="../../../css/bootstrap-responsive.min.css" title="Bootstrap responsive" type="text/css" media="screen" charset="utf-8">

	
</head>
<body>
	
	<h1>Edit Class</h1>
	
	<% if ( message ) { %>
	<%= message %>
	<% } %>
	
	<form method="post" action="/admin/classes/edit">
		<input type="hidden" name="id" value="<%= id %>" />
		<div>
	        <label>Teacher:</label>
	        <input type="text" name="teacher" value="<%= teacher %>" />
	    </div>
		<div>
	        <label>Year:</label>
	        <input type="number" name="year" value="<%= year %>"/>
	    </div>
	    <div>
	        <label>Name:</label>
	        <input type="text" name="name" value="<%= name %>"/>
	    </div>
	    <div>
    		<input type="button" value="Cancel" onclick="javascript:history.back()" />
	        <input type="submit" value="Save"/>
	    </div>	
	</form>
	
	

</body>
</html>