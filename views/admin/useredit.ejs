<!doctype html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
	<title>Edit User</title>
	<link rel="stylesheet" href="../../../css/bootstrap.min.css" title="Bootstrap" type="text/css" media="screen" charset="utf-8">
	<link rel="stylesheet" href="../../../css/bootstrap-responsive.min.css" title="Bootstrap responsive" type="text/css" media="screen" charset="utf-8">

	
</head>
<body>
	

	<h3>Edit User</h3>
	
	<form method="post" action="/admin/users/edit">
		<div>
			<small><%= id %></small>
		</div>
		<div>
			<h4><%= username %></h4>
		</div>
		<input type="hidden" name="id" value="<%= id %>" />
		<div>
	        <label>Email:</label>
	        <input type="email" name="email" value="<%= email %>" />
	    </div>
	    <div>
	        <label>Class:</label>
	        <input type="text" name="habitsClass" value="<%= habitsClass %>" />
	    </div>	    	    
	    <div>
			<label>Gender</label>
			<select name="gender">
				<% for ( var i = 0; i < genders.length; i ++ ) { %>
					<% if ( gender === genders[i] ) { %>
						<option value="<%= genders[i] %>" selected><%= genders[i] %></option>
					<% } else { %>
						<option value="<%= genders[i] %>"><%= genders[i] %></option>
					<% } %>
				<% } %>
			</select>			
		</div>
	    <div>
	    	<label>Type</label>	    	
	    	<select name="usertype">
	    		<% for ( var type in allTypes ){ %>
	    			<option value="<%= type %>" <% if( usertype === type ){ %>selected<% } %> ><%= type %></option>
				<% } %>
			</select>
	    	
	    </div>
	    
	    <div>
	        <label>New Password:</label>
	        <input type="password" name="password" />
	    </div>

	    <div>
    		<input type="button" value="Cancel" onclick="javascript:history.back()" />
	        <input type="submit" value="Save"/>
	    </div>	
	</form>
	
	

</body>
</html>