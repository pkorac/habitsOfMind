<!doctype html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
	<title>Habits of Mind</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/style.css" type="text/css" media="screen" charset="utf-8">
	
</head>
<body class="form-signin">

<!-- Wrapper -->
<div id="wrap">
	<div class="container registrationContainer">

		<!-- Title -->
		<div class="title">			
			
			<h1 class="heading">Registration</h1>
				<p class="subheading">Please enter the registration token and the secret</p>
		</div>


		<% if ( message.length > 0 ) { %>
		<div class="alert alert-dismissable alert-danger">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= message %>
			</div>
		<% } %>

		
		<form method="POST" action="/register">
			<div class="form-group">
		        <label for="inputSecret">Secret:</label>
		        <input id="inputSecret" type="text" name="secret" class="form-control" />
		    </div>
		    <div class="form-group">
		        <label for="inputCode">Registration code:</label>
		        <input type="text" id="inputCode" name="token" class="form-control"/>
		    </div>
		    <div class="form-group">
		    	<button type="submit" class="btn btn-primary btn-block">Register</button>
		    </div>	
		</form>


	
	</div><!--  End of container -->
</div>




<!-- FOOTER -->
<div id="footer">
	<div class="container">
		<p class="text-muted text-center"><small>&copy; 2013 Thomas Tallis School &amp; Peter Koraca</small></p>
	</div>
</div>

	
	


<!-- Javascript Embeds -->
<script type="text/javascript" src="js/jquery.js" ></script>
<script type="text/javascript" src="js/bootstrap.min.js" ></script>
<script type="text/javascript" src="js/main.js" ></script>

</body>
</html>