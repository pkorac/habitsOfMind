<!doctype html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
	<title>Habits of Mind</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/style.css" type="text/css" media="screen" charset="utf-8">
	
</head>
<body class="form-signin">

<!-- Wrapper -->
<div id="wrap">
	<div class="container">


		<form id="form-signin" method="POST" action="/login">
			<h1>Please log in</h1>
						
			<% if ( message.length > 0 ) { %>
				<div class="alert alert-danger">
					<strong><%= message %></strong>
				</div>
			<% } %>
			<input type="text" class="form-control input-lg" id="inputName" name="username" placeholder="Username">
			<input type="password" class="form-control input-lg" id="inputPassword" name="password" placeholder="Password">
			<button type="submit" class="btn btn-success btn-lg btn-block">Log-in</button>
		</form>
	
		
	</div><!--  End of container -->
</div>




<!-- FOOTER -->
<div id="footer">
	<div class="container">
		<p class="text-muted text-center"><small>&copy; 2013 Thomas Tallis School &amp; Peter Koraca</small></p>
	</div>
</div>

	
	


<!-- Javascript Embeds -->
<script type="text/javascript" src="js/jquery.js" ></script>
